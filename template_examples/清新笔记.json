  "html_template": "<!DOCTYPE html>\n<html lang=\"zh-CN\">\n<head>\n    <meta charset=\"UTF-8\">\n    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">\n    <title>{{ page_title }}</title>\n    <script src=\"https://cdn.tailwindcss.com\"></script>\n    <script src=\"https://cdn.jsdelivr.net/npm/chart.js\"></script>\n    <script src=\"https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js\"></script>\n    <link rel=\"preconnect\" href=\"https://fonts.googleapis.com\">\n    <link rel=\"preconnect\" href=\"https://fonts.gstatic.com\" crossorigin>\n    <link href=\"https://fonts.googleapis.com/css2?family=Noto+Serif+SC:wght@400;700&display=swap\" rel=\"stylesheet\">\n    <style>\n        html {\n            height: 100%;\n            display: flex;\n            align-items: center;\n            justify-content: center;\n            background-color: #f0ebe5; \n        }\n\n        body {\n            width: 1280px;\n            height: 720px;\n            margin: 0;\n            padding: 0;\n            position: relative;\n            overflow: hidden;\n            background-color: #fdfdf9;\n            font-family: 'Noto Serif SC', 'STKaiti', 'Kaiti', serif;\n            flex-shrink: 0; \n            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.08);\n        }\n        \n        .slide-container {\n            width: 100%;\n            height: 100%;\n            display: flex;\n            flex-direction: column;\n            color: #545454;\n            position: relative;\n        }\n        \n        .slide-header {\n            padding: 40px 60px 20px 60px;\n            position: relative;\n        }\n        \n        .slide-header:after {\n            content: '';\n            position: absolute;\n            left: 60px;\n            bottom: 10px;\n            right: 60px;\n            height: 5px;\n            background-image: url('data:image/svg+xml;utf8,<svg width=\"100\" height=\"5\" xmlns=\"http://www.w3.org/2000/svg\"><path d=\"M0,3 Q25,0 50,3 T100,3\" stroke=\"%23E0D8D2\" stroke-width=\"2\" fill=\"none\"/></svg>');\n            background-size: 20px 5px;\n        }\n        \n        .slide-title {\n            font-size: clamp(2rem, 4vw, 3.2rem);\n            font-weight: 700;\n            color: #BCA89F;\n            margin: 0;\n            line-height: 1.3;\n            max-height: 80px;\n            overflow: hidden;\n        }\n        \n        .slide-content {\n            flex: 1;\n            padding: 30px 60px;\n            display: flex;\n            flex-direction: column;\n            justify-content: center;\n            max-height: 580px;\n            overflow: hidden;\n        }\n        \n        .content-main {\n            font-size: clamp(1.1rem, 2.5vw, 1.5rem);\n            line-height: 1.8;\n            color: #545454;\n            font-weight: 400;\n        }\n        \n        .content-points {\n            list-style: none;\n            padding: 0;\n            margin: 0;\n        }\n        \n        .content-points li {\n            margin-bottom: 18px;\n            padding-left: 35px;\n            position: relative;\n        }\n        \n        .content-points li:before {\n            content: \"○\";\n            position: absolute;\n            left: 0;\n            top: 0.1em;\n            color: #BCA89F;\n            font-size: 1.2em;\n            font-weight: bold;\n        }\n        \n        .slide-footer {\n            position: absolute;\n            bottom: 20px;\n            left: 60px;\n            font-size: 14px;\n            color: #c0b8b2;\n            font-weight: 600;\n        }\n        \n        .chart-container {\n            max-height: 300px;\n            margin: 20px 0;\n        }\n        \n        .highlight-box {\n            background: rgba(243, 226, 209, 0.4);\n            padding: 20px;\n            margin: 20px 0;\n            border-radius: 8px;\n            border-left: 5px solid #D7C0AE;\n        }\n        \n        @media (max-width: 1280px) {\n            body {\n                width: 100vw;\n                height: 56.25vw;\n                max-height: 100vh;\n                box-shadow: none;\n            }\n        }\n    </style>\n</head>\n<body>\n    <div class=\"slide-container\">\n        <div class=\"slide-header\">\n            <h1 class=\"slide-title\">{{ main_heading }}</h1>\n        </div>\n        \n        <div class=\"slide-content\">\n            <div class=\"content-main\">\n                {{ page_content }}\n            </div>\n        </div>\n        \n        <div class=\"slide-footer\">\n            {{ current_page_number }} / {{ total_page_count }}\n        </div>\n    </div>\n</body>\n</html>",
