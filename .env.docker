# LandPPT Docker Environment Configuration
# Copy this file to .env for Docker deployment

# =============================================================================
# AI Provider Configuration
# =============================================================================

# Default AI provider to use (openai, anthropic, google, azure_openai, ollama)
DEFAULT_AI_PROVIDER=openai

# OpenAI Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_BASE_URL=https://api.openai.com/v1

# Anthropic Configuration
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-haiku-20240307

# Google Gemini Configuration
# Get your API key from: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_MODEL=gemini-1.5-flash

# Azure OpenAI Configuration
# Set up Azure OpenAI service and get your credentials
AZURE_OPENAI_API_KEY=your_azure_openai_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=your_deployment_name
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Ollama Configuration (for local models)
# When using with docker-compose, use the service name as hostname
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=llama2

# Tavily API Configuration (for research functionality)
# Get your API key from: https://tavily.com/
TAVILY_API_KEY=your_tavily_api_key_here
TAVILY_MAX_RESULTS=10
TAVILY_SEARCH_DEPTH=advanced

# =============================================================================
# AI Generation Parameters
# =============================================================================

# Maximum tokens to generate
MAX_TOKENS=8192

# Temperature for generation (0.0 = deterministic, 1.0 = creative)
TEMPERATURE=0.7

# Top-p sampling parameter
TOP_P=1.0

# =============================================================================
# Application Configuration
# =============================================================================

# Server settings (optimized for Docker)
HOST=0.0.0.0
PORT=8000
DEBUG=false
RELOAD=false

# Security settings
SECRET_KEY=your-very-secure-secret-key-change-this-in-production-docker
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File upload settings
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/app/uploads

# Cache settings
CACHE_TTL=3600

# Database settings (Docker volume path)
DATABASE_URL=sqlite:///./data/landppt.db

# =============================================================================
# Feature Flags
# =============================================================================

# Enable network mode for enhanced content
ENABLE_NETWORK_MODE=true

# Enable local model support (set to true if using Ollama)
ENABLE_LOCAL_MODELS=false

# Enable streaming responses
ENABLE_STREAMING=true

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Log AI requests and responses (be careful with sensitive data)
LOG_AI_REQUESTS=false
